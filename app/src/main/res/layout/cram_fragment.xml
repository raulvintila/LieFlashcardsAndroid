<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:id="@+id/cram_stats_rl"
    android:background="@color/white"
    android:paddingTop="16dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/cram_deck_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cram_deck_main_mode"
            android:text="Study"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            />
        <TextView
            android:layout_below="@+id/cram_deck_main_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cram_deck_sub_mode"
            android:text="Cram"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cram_due_today"
            android:text="Due today"
            android:gravity="left"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/cram_deck_sub_mode"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cram_due_today_stats"
            android:layout_below="@+id/cram_deck_sub_mode"
            android:gravity="right"
            android:layout_marginTop="22dp"
            android:text="20"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cram_total_new_cards"
            android:text="New cards"
            android:gravity="left"
            android:layout_below="@+id/cram_due_today"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cram_total_new_cards_stats"
            android:layout_below="@+id/cram_due_today"
            android:gravity="right"
            android:text="15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cram_total_cards"
            android:text="Restudied cards"
            android:gravity="left"
            android:layout_below="@+id/cram_total_new_cards"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cram_total_cards_stats"
            android:layout_below="@+id/cram_total_new_cards"
            android:gravity="right"
            android:text="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cram_estimated_time"
            android:text="Estimated time (min)"
            android:gravity="left"
            android:layout_below="@+id/cram_total_cards"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cram_estimated_time_stats"
            android:layout_below="@+id/cram_total_cards"
            android:gravity="right"
            android:text="17"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/cram_play_mode_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/cram_deck_stats"
        android:text="Cram mode."/>
    <TextView
        android:id="@+id/cram_play_mode_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cram_play_mode_description1"
        android:text=""/>
</RelativeLayout>