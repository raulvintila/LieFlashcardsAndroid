<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raulvintila.app.lieflashcards.Activities.AudioRecordActivity"
    android:id="@+id/rl">

    <!--super.onCreate(savedInstanceState);
    setContentView(R.layout.activity_audio_record);

    mRecordButton = (RecordButton)findViewById(R.id.record_button);
    mPlayButton = (PlayButton)findViewById(R.id.play_button);-->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:background="?attr/colorPrimary"
            app:layout_collapseMode="pin"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar">

        <Button
            android:id="@+id/record_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button"
            android:layout_alignParentTop="true"
            android:text="Start Recording"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:minHeight="1dp"
            android:id="@+id/bar1"
            android:layout_below="@+id/record_button"
            android:layout_gravity="center_horizontal"
            android:background="#15000000"
            android:gravity="center_horizontal"
            android:visibility="visible"/>
        <Button
            android:id="@+id/play_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button"
            android:layout_below="@id/bar1"
            android:text="Start Playing"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:minHeight="1dp"
            android:id="@+id/bar3"
            android:layout_below="@+id/play_button"
            android:layout_gravity="center_horizontal"
            android:background="#15000000"
            android:gravity="center_horizontal"
            android:visibility="visible"/>
        <Button
            android:id="@+id/stop_playing"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button"
            android:layout_below="@id/bar3"
            android:text="Stop Playing"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:minHeight="1dp"
            android:id="@+id/bar5"
            android:layout_below="@+id/stop_playing"
            android:layout_gravity="center_horizontal"
            android:background="#15000000"
            android:gravity="center_horizontal"
            android:visibility="visible"/>
    </RelativeLayout>



</RelativeLayout>

