<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raulvintila.app.lieflashcards.Activities.PlayDeckActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/appbar_layout">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.AppBarLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">
        <RelativeLayout
            android:id="@+id/whiteboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="56dp"
            android:layout_marginTop="72dp"
            >
            <RelativeLayout
                android:id="@+id/front_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/separator"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/front_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/front_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/front_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:visibility="gone"/>
            </RelativeLayout>
            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:minHeight="1dp"
                android:background="#15000000"
                android:layout_centerHorizontal="true"
                android:id="@+id/separator"
                android:layout_centerVertical="true"/>
            <RelativeLayout
                android:id="@+id/back_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/separator"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/back_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/back_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/back_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_volume_up_black_24dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:visibility="gone"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:id="@+id/show_answer_layout"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Show answer"
                android:id="@+id/show_answer"
                android:textColor="#ff676767"
                android:textSize="16sp"
                android:onClick="onClick"
                android:textAllCaps="false"
                android:background="@drawable/button"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:id="@+id/difficulty_layout"
            android:visibility="invisible"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hard"
                    android:id="@+id/hard"
                    android:textColor="#ff676767"
                    android:textSize="16sp"
                    android:onClick="onClick"
                    android:layout_weight="0.30"
                    android:textAllCaps="false"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/red_button"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Normal"
                    android:onClick="onClick"
                    android:id="@+id/normal"
                    android:layout_weight="0.30"
                    android:textColor="#ff676767"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/blue_button"/>
                <!--<View
                    android:layout_width="3dp"
                    android:minWidth="3dp"
                    android:background="@color/transparent"
                    android:layout_height="match_parent"/>-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Easy"
                    android:onClick="onClick"
                    android:id="@+id/easy"
                    android:layout_weight="0.30"
                    android:textColor="#ff676767"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/white_button"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>





</RelativeLayout>
